#include <stdio.h>

int main() {
    const int size = 1001;
    int spiral[size][size];

    // Initialize the spiral matrix
    int num = size * size;
    int row = 0, col = size - 1;
    int i, j;

    for (i = 0; i < size; i++) {
        for (j = 0; j < size; j++) {
            spiral[i][j] = 0;
        }
    }

    while (num > 0) {
        // Move left
        while (col >= 0 && spiral[row][col] == 0) {
            spiral[row][col] = num;
            num--;
            col--;
        }
        col++;

        // Move up
        while (row >= 0 && spiral[row][col] == 0) {
            spiral[row][col] = num;
            num--;
            row--;
        }
        row++;

        // Move right
        while (col < size && spiral[row][col] == 0) {
            spiral[row][col] = num;
            num--;
            col++;
        }
        col--;

        // Move down
        while (row < size && spiral[row][col] == 0) {
            spiral[row][col] = num;
            num--;
            row++;
        }
        row--;
    }

    // Calculate the sum of the diagonals
    long long diagonalSum = 0;
    for (i = 0; i < size; i++) {
        diagonalSum += spiral[i][i];           // Primary diagonal
        diagonalSum += spiral[i][size - i - 1]; // Secondary diagonal
    }

    // Subtract the central element, as it's added twice
    diagonalSum -= spiral[size / 2][size / 2];

    printf("Sum of the diagonals: %lld\n", diagonalSum);

    return 0;
}
